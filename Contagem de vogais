#include <stdio.h> 	// "cstdio" pra printf e scanf
#include <stdlib.h> 	// "cstdlib" pra system (tirar para Linux e executar em linha de comando)

int main( void)
{
	char nome[11];
	int vogais = 0, i;

	printf( "\nDigite seu nome: ");
	scanf( "%10s", nome);

	for( i = 0; ( i < 10) && ( nome[i] != 0); i++)
		if( ( nome[i] == 'a') ||
		    ( nome[i] == 'e') ||
		    ( nome[i] == 'i') ||
		    ( nome[i] == 'o') ||
		    ( nome[i] == 'u') ||
		    ( nome[i] == 'A') ||
		    ( nome[i] == 'E') ||
		    ( nome[i] == 'I') ||
		    ( nome[i] == 'O') ||
		    ( nome[i] == 'U') ) vogais++;
	printf( "\n\nNÃºmero de vogais: %i\n\n", vogais);
	system( "PAUSE");
}
